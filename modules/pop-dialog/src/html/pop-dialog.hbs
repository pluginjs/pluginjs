  <h3>Events</h3>
  <div class="example">
    <button type="button" class="pop-dialog-event" data-html="true" title="hello world" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus.">
      PopDialog with event
    </button>
    <div class="console"></div>
    <script>
      $(document).ready(function() {
        var $element = document.querySelector('.pop-dialog-event');

        var events = ['ready', 'enable', 'disable', 'destroy', 'hide', 'hidden', 'show', 'shown', 'inserted']

        for(var i = 0; i < events.length; i++) {
          $element.addEventListener('pop-dialog:'+events[i], function(event, instance) {
            $('<div><span class="console-info">' + event.type + '</span>:triggered</div>').prependTo('.console');
          });
        }

        Pj.popDialog($element, {
          buttons: {
            continue: {
              label: 'Continue',
              color: 'primary',
              fn: function(resolve) {
                $('<div><span class="console-info">Continue</span>:clicked</div>').prependTo('.console');
                resolve();
              }
            }
          }
        });

        $('.api-init').on('click', function() {
          $element.asPopDialog();
        });

        $('.api-destroy').on('click', function() {
          $element.asPopDialog('destroy');
        });

        $('.api-enable').on('click', function() {
          $element.asPopDialog('enable');
        });

        $('.api-disable').on('click', function() {
          $element.asPopDialog('disable');
        });

        $('.api-show').on('click', function() {
          $element.asPopDialog('show');
        });

        $('.api-hide').on('click', function() {
          $element.asPopDialog('hide');
        });

        $('.api-toggle').on('click', function() {
          $element.asPopDialog('toggle');
        });

        $('.api-do').on('click', function() {
          $element.asPopDialog('do', 'continue');
        });
      });
    </script>
    <div class="apis pad-top-20">
      <button class="btn api-init">init</button>
